{
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://minilink-fr8u.onrender.com/api/:path*" },
    { "source": "/r/:short_id", "destination": "https://minilink-fr8u.onrender.com/r/:short_id" },
    { "source": "/((?!api/|r/).*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/:path*",
      "headers": [ { "key": "Cache-Control", "value": "no-store" } ]
    }
  ]
}
